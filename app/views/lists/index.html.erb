<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url(https://res.cloudinary.com/dutbzgehz/image/upload/v1717808750/fwj3lrtkorkc2wfvid33.jpg)">
  <div class="container">
    <h1>Welcome to the best Cinema Community </h1>
    <p>Ratings, Reviews, and Where to Watch the Best Movies</p>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
      <h3 class="mb-0">My Lists</h3>
      <%= link_to "Create a movie list", new_list_path, class: "btn btn-danger" %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <div class="card-category shadow" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(list.image.key)%>)">
            <%= list.name %>
          </div>
          <%= link_to "", list_path(list.id), data: {turbo_method: :delete, turbo_confirmation: "EstÃ¡s seguro que quieres continuar?"}, :class => "fa-solid fa-trash text-danger text-decoration-none ps-2" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
