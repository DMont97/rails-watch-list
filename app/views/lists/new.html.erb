<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Add a new list</h3>
          <%= simple_form_for @list do |f| %>
            <%= f.input :name, collection: ["Comedy", "Fantasy", "Action", "Anime", "Horror", "Romance", "Science fiction", "Drama", "Thriller", "Mistery", "Crime"] %>
            <%= f.input :image, as: :file %>
            <%= f.submit :Submit, class: "btn btn-danger" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
