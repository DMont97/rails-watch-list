<div class="banner1" style="background-image: linear-gradient(rgba(0,0,0,0.5),rgba(0,0,0,0.5)), url(<%= cl_image_path(@list.image.key)%>)">
  <h1 class="text-center"><%= @list.name %></h1>
</div>
<span class="movie-tag"><%= pluralize(@list.movies.size, "movie") %></span>
<div class="mt-3 mx-5 text-end">
  <%= link_to "Add a Movie", new_list_bookmark_path(@list), class: "btn btn-danger text-decoration-none" %>
</div>
<div class="position-relative">
  <div class="row my-2">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div class="col-12 col-sm-6 mb-4" data-aos="zoom-in">
        <div class="bg-white rounded shadow h-100">
          <%= image_tag movie.poster_url, alt: movie.title, class: "movie-img rounded-top" %>
          <div class="p-3 rounded-bottom d-flex flex-column">
            <strong><%= movie.title %> <span class="text-muted font-weight-normal">â€¢ <%= movie.rating %> <i class="fas fa-star star-yellow"></i></span></strong>
            <small class="text-muted"><%= movie.overview %></small>
            <div class="d-flex align-items-end justify-content-between pt-4">
              <div>
                <i class="fas fa-quote-left me-2"></i><small class="flex-grow-1"><%= bookmark.comment %></small>
              </div>
              <%= link_to "", list_bookmarks_path(@list.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list?"}, class: 'fa-solid fa-trash text-danger text-decoration-none ps-2' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
